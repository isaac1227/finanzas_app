# ğŸ Backend Dockerfile - FastAPI + PostgreSQL
FROM python:3.11-slim

# ğŸ“‹ Metadatos
LABEL maintainer="isaac1227"
LABEL description="Finanzas App - Backend API con FastAPI"
LABEL version="1.0.0"

# ğŸ”§ Configurar variables de entorno
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# ğŸ“‚ Crear directorio de trabajo
WORKDIR /app

# ğŸ“¦ Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“¥ Copiar archivos de dependencias primero (para cache layer)
COPY requirements.txt .

# ğŸ”§ Instalar dependencias Python
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# ğŸ“ Copiar cÃ³digo fuente
COPY . .

# ğŸ‘¤ Crear usuario no-root para seguridad
RUN adduser --disabled-password --gecos '' --uid 1000 appuser && \
    chown -R appuser:appuser /app
USER appuser

# ğŸŒ Exponer puerto
EXPOSE 8000

# ğŸ¥ Healthcheck
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/docs || exit 1

# ğŸš€ Comando por defecto
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]